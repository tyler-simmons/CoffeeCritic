<% include ../partials/header %>
<div class="container text-center">
    <h1>Edit <%= shop.name %></h1>
    <form action="/shops/<%= shop._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" name="shop[name]" value="<%= shop.name %>" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="shop[image]" value="<%= shop.image %>" class="form-control">
        </div>
        <div class="form-group">
            <textarea rows="5" cols="50" name="shop[description]" class="form-control"><%= shop.description %> </textarea>
        </div>
        <div class="form-group">
            <input type="text" name="shop[menu]" value="<%= shop.menu %>" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" class="form-control">Submit Changes</button>
    </form>
    <a href="/shops/<%= shop._id %>/edit/updateAddress">Update Address</a>
    <form action="/shops/<%= shop._id %>?_method=DELETE" method="POST">  
        <div class="form-group">
            <button class="btn btn-danger" type="submit" id="deleteButton" onclick="return confirm('Are you sure?')">Delete This Shop</button>
        </div>
    </form>
</div>
<script src="/js/edit.js"></script>
<% include ../partials/footer %>

