<%include ../partials/header%>

	</div>
	<section class="container-fluid text-center" id="header-fluid-container">
		<div class="container">
			<h1 class="header-title">Coffee Critic</h1>
			<p class="header-text">Find and Discuss Great local coffee shops today</p>
			<form action="/shops/search/" method="GET"  class="d-flex justify-content-center header-search">
				<input name="searchParam" type="text" placeholder="Philadelphia, Atlanta, Boston...">
				<button type="submit">Search</button>
			</form>
			<a href="/shops/new" class="btn btn-primary">New Shop</a>
		</div>
	</section>

	<section class="container text-center section-padding" id="featured">
		<h2 class="section-heading">Featured Shops</h2>
		<hr class="heading-hr">
		<div id="featured-carousel" class="carousel slide mx-auto" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<a href="/shops/<%=shops[0]._id%>">
						<img class="d-block w-100 img-tint" id="c-1" src="<%=shops[0].image%>" alt="">
						<div class="carousel-caption d-non d-md-block">
							<h5 class="carousel-title-custom"><%=shops[0].name%></h5>
							<p><%=shops[0].location.city%>, <%=shops[0].location.state%></p>
						</div>
					</a>
				</div>
				<div class="carousel-item">
					<a href="/shops/<%=shops[1]._id%>">
						<img class="d-block w-100 img-tint" id="c-2" src="<%=shops[1].image%>" alt="">
						<div class="carousel-caption d-non d-md-block">
							<h5 class="carousel-title-custom"><%=shops[1].name%></h5>
							<p><%=shops[1].location.city%>, <%=shops[1].location.state%></p>
						</div>
					</a>
				</div>
				<div class="carousel-item">
					<a href="/shops/<%=shops[2]._id%>">
						<img class="d-block w-100 img-tint" id="c-3" src="<%=shops[2].image%>" alt="">
						<div class="carousel-caption d-non d-md-block">
							<h5><span class="carousel-title-custom"><%=shops[2].name%></span></h5>
							<p><%=shops[2].location.city%>, <%=shops[2].location.state%></p>
						</div>
					</a>
				</div>
			</div>
			<a class="carousel-control-prev" href="#featured-carousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#featured-carousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</section>

	<!--  TODO: Format the shop card according to mockup  -->
	
	<section class="container text-center section-padding" id="local-listings">
		<h2 class="section-heading">Local Finds</h2>
		<hr class="heading-hr">
		<div class="card-container-index">
			<% for (let i = 0; i < shops.length; i++) { %>
				<div class="card text-center d-inline-block w-100">
					<img src="<%=shops[i].image%>" alt="Image of <%=shops[i].name%>" class="card-img-top">
					<div class="card-body">
						<h5 class="card-title"><%=shops[i].name%></h5>
						<p class="card-text"><%=shops[i].location.city%>, <%=shops[i].location.state%></p>
						<a href="/shops/<%=shops[i]._id%>" class="btn btn-secondary">View</a>
					</div>
				</div>
			<% }; %>
		</div>

	</section>

	

<%include ../partials/footer%>